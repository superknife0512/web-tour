        duration: 2,
        img: './images/hoian.jpg'
      },
      {
        title: 'Phong Nha Tour',
        desc: 'Discover the deepest cave with our professional team',
        discount: 30,
        price: 540,
        people: 2,
        duration: 7,
        img: './images/tamcoc.jpg'
      },
    ]
  }
})
</script>
